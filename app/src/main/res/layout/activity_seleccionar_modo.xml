<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_modo" />

    <Button
        android:id="@+id/buttonModoClasico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clasico" />

    <Button
        android:id="@+id/buttonModoContrareloj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contrarreloj" />

    <Button
        android:id="@+id/buttonModoCientifico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cientifico" />

    <Button
        android:id="@+id/buttonModoContinuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/continuar" />
</LinearLayout>